
$button-text-transform := none
// Vuetify
@import '~vuetify/src/stylus/main'
// Markdown Editor Style
@import '~simplemde/dist/simplemde.min.css';
// Material Design Icons
@import '../../static/material-icons/material-icons.css'
// Font Awesome
@import '../../static/font-awesome/css/font-awesome.min.css'
// Others 
// 
.content--wrap
  background: url(../assets/stars-opacity.svg) repeat

.my-jumbotron
  background-image: url(../assets/circles.svg)

.theme--light .card, .application .theme--light.card
  border-radius: 10px !important

.tabs__bar
  border-radius: 10px !important

.my-btn
  background-color: rgba(0,0,0,.3)
  border-radius: 5px
  color: #ffffff !important
  outline: none
  padding: 16px 24px !important
  margin-right: 16px
  font-size: 16px !important
  border-radius: 4px

.my-avatar 
  border: 4px solid #1976d2 !important
  padding: 6px

.my-card 
  -webkit-box-shadow: 0 2px 10px 0 rgba(0,0,0,.05) !important
  box-shadow: 0 2px 10px 0 rgba(0,0,0,.05) !important
  border-radius: 8px !important

.card--flex-toolbar 
  margin-top: -32px;
  width: 70%;
  
.btn 
  font-size: 16px!important

._footer 
  display: flex
  flex-flow: row wrap
  justify-content: space-between

._title 
  font-size: 20px !important
  line-height: 22px !important

  // width: 100%
  // height: 100%

// Custom General Classes
.display-flex 
  display: flex

.column 
  flex-direction: column

.row 
  flex-direction: row

.wrap 
  flex-wrap: wrap

.align-items-center 
  align-items: center

.align-items-start
  align-items: flex-start

.justify-content-start 
  justify-content: flex-start

.justify-content-center
  justify-content: center

.text-uppercase 
  text-transform: uppercase !important

.text-truncate 
  text-overflow: ellipsis

.text-lowercase 
  text-transform: lowercase

.pointer 
  cursor: pointer

.font-weight-light 
  font-weight: 400 !important

.font-weight-lighter 
  font-weight: 300 !important

.font-weight-bold 
  font-weight: 500 !important

.font-weight-bolder 
  font-weight: 700 !important

// 
// 
@media only screen and (max-width: 767px) 
  .author__quote
    align-items: flex-start
    
  .card--flex-toolbar 
    width: 90%
  
  ._footer 
    flex-flow: column wrap
    align-items: center
  
